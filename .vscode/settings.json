{
    // Orthographe
    "cSpell.language": "en,fr",
    "cSpell.words": [
        "ajax",
        "fosjsrouting",
        "Géoplateforme",
        "hotwired",
        "Keycloak",
        "oskarstark",
        "phpunit",
        "POSTGRESQL",
        "processings",
        "sharings",
        "symfony",
        "valuenow"
    ],
    // Associations de fichiers à personaliser selon le projet.
    "files.associations": {
        "*.html": "HTML5",
        "*.php_cs.dist": "php",
        "*.php_cs": "php",
        "*.yml.dist": "yaml",
        "*.env.test": "env",
        "*.env.dev": "env",
        "*.env.local": "env",
        "*.env.prod": "env",
    },
    // Répertoires à exclure
    "files.exclude": {
        "**/var/cache/**": true,
        "**/node_modules/**": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/vendor/**": true,
        "**/node_modules/**": true,
        "**/var/**": true,
    },
    // Paramètre de l'éditeur
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,
    "editor.trimAutoWhitespace": false,
    "files.trimTrailingWhitespace": false,
    // Gestion des espaces de fin
    "trailing-spaces.syntaxIgnore": ["markdown"],
    "trailing-spaces.showStatusBarMessage": true,
    "trailing-spaces.includeEmptyLines": false,
    "trailing-spaces.trimOnSave": true,
    // TWIG et HTML
    "html.format.wrapLineLength": 0,
    "emmet.includeLanguages": {
        "twig": "html",
        "phpunit.xml.dist": "xml",
    },
    // Configuration pour code en PHP
    "[php]": {
        "editor.defaultFormatter": "junstyle.php-cs-fixer",
        "editor.formatOnSave": true
    },
    "php.suggest.basic": false,
    "php.validate.enable": false,
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.config": "symfony/.php-cs-fixer.php;symfony/.php-cs-fixer.dist.php",
    "php-cs-fixer.executablePath": "${workspaceRoot}/symfony/vendor/friendsofphp/php-cs-fixer/php-cs-fixer",
    "intelephense.format.enable": false,
    "intelephense.stubs": [
        "apache",
        "bcmath",
        "bz2",
        "calendar",
        "com_dotnet",
        "Core",
        "ctype",
        "curl",
        "date",
        "dba",
        "dom",
        "enchant",
        "exif",
        "FFI",
        "fileinfo",
        "filter",
        "fpm",
        "ftp",
        "gd",
        "gettext",
        "gmp",
        "hash",
        "iconv",
        "imap",
        "intl",
        "json",
        "ldap",
        "libxml",
        "mbstring",
        "meta",
        "mysqli",
        "oci8",
        "odbc",
        "openssl",
        "pcntl",
        "pcre",
        "PDO",
        "pdo_ibm",
        "pdo_mysql",
        "pdo_pgsql",
        "pdo_sqlite",
        "pgsql",
        "Phar",
        "posix",
        "pspell",
        "readline",
        "Reflection",
        "session",
        "shmop",
        "SimpleXML",
        "snmp",
        "soap",
        "sockets",
        "sodium",
        "SPL",
        "sqlite3",
        "standard",
        "superglobals",
        "sysvmsg",
        "sysvsem",
        "sysvshm",
        "tidy",
        "tokenizer",
        "xml",
        "xmlreader",
        "xmlrpc",
        "xmlwriter",
        "xsl",
        "Zend OPcache",
        "zip",
        "zlib",
        "ssh2"
    ],
    // Formatteur pour js
    "prettier.requireConfig": true,
    // JS
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    // CSS
    "[css]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    // Typescript (VSCode désactivé, ESLint fait le lint mais pas le format)
    "javascript.validate.enable": false,
    "typescript.format.enable": false,
    "typescript.validate.enable": false,
    "eslint.format.enable": false,
    "eslint.workingDirectories": ["./symfony"],
    "eslint.lintTask.enable": true,
    "eslint.options": {"configFile": "./symfony/.eslintrc.js"},
    // Autres
    "ansible.python.interpreterPath": "/usr/bin/python3",
}